#!/usr/bin/env bash
set -o nounset
set -o errexit

if [ "$#" -ne 0 ]; then
  echo 'Usage: ./export-backup.sh'
  exit 1
fi

event=export-backup

cd <%= $base_dir %>/aem-aws-stack-provisioner/
FACTER_event=${event} \
  puppet apply \
  --modulepath modules \
  --hiera_config conf/hiera.yaml \
  "manifests/${event}.pp"
