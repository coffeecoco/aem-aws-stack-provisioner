#!/usr/bin/env bash
set -o nounset
set -o errexit

if [ "$#" -ne 0 ]; then
  echo 'Usage: ./promote-author-standby-to-primary.sh'
  exit 1
fi

event=promote-author-standby-to-primary

cd <%= $base_dir %>/aem-aws-stack-provisioner/
FACTER_event="${event}" \
  /opt/puppetlabs/bin/puppet apply \
  --debug \
  --modulepath modules \
  --hiera_config conf/hiera.yaml \
  "manifests/${event}.pp"
